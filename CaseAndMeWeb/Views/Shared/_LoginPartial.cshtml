@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    
        <li>
            @Html.ActionLink("Dashboard" , "Index", "Dashboard", routeValues: null, htmlAttributes: new { title = "Manage", @class = "accountlink" })
        </li>
  
    <li>
        @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "accountlink" })
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()" class="accountlink">Cerrar Sesión</a></li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Iniciar Sesión", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "accountlink", id = "loginLink" })</li>
        <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "accountlink",  id = "registerLink" })</li>
    </ul>
}
