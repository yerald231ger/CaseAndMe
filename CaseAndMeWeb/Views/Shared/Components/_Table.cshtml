@model CaseAndMeWeb.Models.ComponentsViewModel.TableViewModel

<table class="table">
    <caption>@Model.Caption</caption>
    <thead>
        <tr>
            @if (Model.Count)
            {
                <th scope="col">#</th>
            }

            @foreach (var row in Model.Headers)
            {
                <th scope="col">@row</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.Rows)
        {
            <tr>
                @if (Model.Count)
                {
                    <th scope="row">@(Model.Rows.IndexOf(row) + 1)</th>
                }

                @foreach (var field in row.Fields)
                {
                    <td>@field</td>
                }
            </tr>
        }
    </tbody>
</table>