@model CaseAndMeWeb.Models.Producto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container m-t-3">
    <div class="row">
        <div class="col-md-12">
            <div class="content">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            @if (string.IsNullOrEmpty(Model.UrlImagen))
                            {
                                <img id='img-upload' src="" />
                            }
                            else
                            {
                                <img id='img-upload' src="~/images/Items/@Url.Content(Model.UrlImagen)" />
                            }
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="control-label h1 ">@Model.Nombre</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="control-label h2 ">@Model.Codigo</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.DropDownList("id", new SelectList(ViewBag.Dispositivos, "id", "Nombre"), "Modelo del dispositivo", new { @class = "form-control combobox-item" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.DropDownList("id", new SelectList(ViewBag.Materiales, "id", "Nombre"), "Material a escoger", new { @class = "form-control combobox-item margin-bottom-30" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-md-6 ">
                                    <input id="touchspin_Cantidad" type="text" value="1" name="touchspin_Cantidad" data-bts-button-down-class="btn btn-default" data-bts-button-up-class="btn btn-default">
                                </div>
                                <div class="col-md-6 ">
                                    <input type="submit" value="Agregar a Carrito" class="btn  btn-info pull-right font-size-20" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        $(document).ready(function () {
            $('#touchspin_Cantidad').TouchSpin({
                verticalbuttons: true,
                min: 1,
                max:1000,
                verticalup: '<i class="glyphicon glyphicon-chevron-up"></i>',
                verticaldown: '<i class="glyphicon glyphicon-chevron-down"></i>'
            });
        });
    </script>
}
