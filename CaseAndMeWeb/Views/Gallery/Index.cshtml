                                        </a>
                                        <div class="option">
                                            <a href="javascript:openItemModal(@ViewBag.pProductos[Primer].Id, '@ViewBag.pProductos[Primer].Nombre', @ViewBag.pProductos[Primer].Precio, '@ViewBag.pProductos[Primer].UrlImagen', @(ViewBag.pProductos[Primer].Inventario != null ? ViewBag.pProductos[Primer].Inventario.Cantidad : 0));" data-toggle="tooltip" title="" data-original-title="Add to Cart"><i class="fa fa-shopping-cart"></i></a>
                                        </div>
                                    </div>
                                    <h6><a href="~/Item/Details/@ViewBag.pProductos[Primer].Codigo">@ViewBag.pProductos[Primer].Nombre</a></h6>
                                    <div class="price">
                                        <div>$@ViewBag.pProductos[Primer].Precio </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                    @if (Segundo < ViewBag.pProductos.Count)
                    {
                        <div class="col-md-3 col-6 col-xs-6">
