                </ul>
            </nav>

        </div>

        <div class="col-md-9 col-sm-12">

            <!-- Featured -->
            <div class="title"><span>Galeria</span></div>
            @for (int i = 0; i < ViewBag.pProductos.Count; i++)
            {
                int Primer = i;
                int Segundo = i + 1;
                int Tercer = i + 2;
                int Cuarto = i + 3;
                <div class="row">
                    @if (Primer < ViewBag.pProductos.Count)
                    {
                        <div class="col-md-3 col-6 col-xs-6">
                            <div class="box-product-outer">
                                <div class="box-product">
                                    <div class="img-wrapper">
